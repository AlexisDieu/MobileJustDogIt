<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_ending_date"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="Date de sortie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_starting_date" />

    <TextView
        android:id="@+id/tv_ending_date_date"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="Date sortie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/tv_starting_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_starting_date_date" />

    <TextView
        android:id="@+id/tv_animal_name"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="Nom de l'animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_animal_name_name"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:text="Nom de l'animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/tv_animal_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_starting_date"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:text="Date d'arrivée"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_name" />

    <TextView
        android:id="@+id/tv_starting_date_date"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="Date début"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_starting_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_name_name" />

    <TextView
        android:id="@+id/tv_price_price"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:text="Prix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_ending_date_date" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:text="Prix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ending_date" />

</androidx.constraintlayout.widget.ConstraintLayout>